<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Explain3Fragment"
    android:background="@drawable/nightimg">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hi_text"
        android:layout_marginLeft="50dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="65sp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/linear1"
        android:layout_marginTop="10dp"
        android:text="에필로그란?"
        android:textSize="35sp"
        android:textColor="#CFCECE"/>

    <View
        android:id="@+id/view_place"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:background="#D02D3149"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/intro_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp"
        android:text="에필로그는"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/linear1"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintBottom_toTopOf="@+id/push_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/push_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="같은 곳에서"
        android:layout_marginTop="20dp"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear2"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/linear2"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/push_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/intro_text2"/>

    <TextView
        android:id="@+id/intro_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기다리고 있을게요"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/intro_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="언제든 찾아와주세요"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/intro_text2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/out_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 뒤로가기 버튼으로 * \n * 나갈 수 있어요 *"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/intro_text3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>