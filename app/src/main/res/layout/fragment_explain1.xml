<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Explain1Fragment"
    android:background="@drawable/nightimg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hi_text"
        android:layout_marginLeft="50dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="65sp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/linear1"
        android:layout_marginTop="10dp"
        android:text="에필로그란?"
        android:textSize="35sp"
        android:textColor="#CFCECE"/>

    <View
        android:id="@+id/view_place"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:background="#D02D3149"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/linear1"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintBottom_toTopOf="@+id/ex_word"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ex_word"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:text=". . ."/>

    <TextView
        android:id="@+id/ex_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintBottom_toTopOf="@+id/linear2"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:text="@string/word"/>


    <View
        android:id="@+id/linear2"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="#59FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/intro_text1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/intro_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex_word"
        android:text="매일 날이 바뀌며"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/intro_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_text1"
        android:text="새로운 글감이"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/intro_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_text2"
        android:text="나타납니다."
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>