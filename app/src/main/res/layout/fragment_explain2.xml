<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Explain2Fragment"
    android:background="@drawable/nightimg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hi_text"
        android:layout_marginLeft="50dp"
        android:text="@string/app_name"
        android:fontFamily="@font/songmyung_regular"
        android:textColor="@color/white"
        android:textSize="65sp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:fontFamily="@font/maruburi_semibold"
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/linear1"
        android:layout_marginTop="10dp"
        android:text="에필로그란?"
        android:textSize="35sp"
        android:textColor="#CFCECE"/>

    <View
        android:id="@+id/view_place"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:background="#D02D3149"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        android:layout_marginTop="20dp"/>

    <TextView
        android:fontFamily="@font/maruburi_regular"
        android:id="@+id/intro_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp"
        android:text=" '  '  '"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/linear1"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintBottom_toTopOf="@+id/push_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:fontFamily="@font/maruburi_semibold"
        android:id="@+id/push_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 7시"
        android:layout_marginTop="20dp"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear2"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/linear2"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/push_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/intro_text2"/>

    <TextView
        android:fontFamily="@font/maruburi_regular"
        android:id="@+id/intro_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에 알람을 보낼게요"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>